# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                             controllers.Application.index

# Accounts
#POST    /api/v1/accounts              controllers.AccountController.createAccount

# Domains
#POST    /domains                      controllers.DomainController.createNew
#GET     /domains/:id                  controllers.DomainController.findById(id: String)
#PUT     /domains/:id                  controllers.DomainController.update(id: String)
#DELETE  /domains/:id                  controllers.DomainController.delete(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.at(path="/public", file)
